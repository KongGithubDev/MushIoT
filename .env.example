# Server
PORT=3000
NODE_ENV=production

# MongoDB
# Example for local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/mushiot
# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/mushiot?retryWrites=true&w=majority
MONGODB_URI=
# Optional override of db name (used when connection string does not include one)
MONGODB_DB=mushiot

# CORS: comma-separated list of allowed origins. Leave empty to allow all (not recommended in prod)
# e.g. https://your-domain.com,https://admin.your-domain.com
ALLOWED_ORIGINS=

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Optional enrollment secret for secure device provisioning
# When set, server requires header `x-enroll-secret: $ENROLL_SECRET` during `/api/devices/:deviceId/rotate-key`.
# Share this secret with your ESP32 firmware (ENROLL_SECRET) if you want to enable secure enrollment.
ENROLL_SECRET=

# Admin API token for privileged operations (rename device, revoke key)
# Required in request header: x-admin-token: $ADMIN_TOKEN
ADMIN_TOKEN=

# OTA (firmware over-the-air) manifest
# Version string and absolute URL to the binary (.bin)
FIRMWARE_VERSION=
FIRMWARE_URL=

# Web login (JWT) configuration
# JWT signing secret and default admin credentials for seeding
JWT_SECRET=
ADMIN_EMAIL=
ADMIN_PASSWORD=
